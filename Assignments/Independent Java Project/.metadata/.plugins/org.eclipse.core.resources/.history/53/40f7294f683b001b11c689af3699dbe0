package SDL_Project;

import javax.*;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.SwingConstants;
import javax.swing.JLabel;

import java.awt.*;
import java.awt.event.*;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;

public class Main extends JFrame implements ActionListener {
	
	JLabel label;
	JButton b1;
	JButton b2;
	JButton b3;
	JPanel panel;
	public static void main(String[] args) {
		JFrame frame = new JFrame("App");
		frame.setSize(300, 300);
		frame.setVisible(true);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		JPanel panel = new JPanel();
		frame.add(panel);
		
		JLabel label = new JLabel("Button has been clicked");
		label.setSize(100, 100);
		label.setHorizontalTextPosition(JLabel.CENTER);
		label.setVerticalTextPosition(JLabel.TOP);
		label.setVisible(true);
		panel.add(label);
		
		JButton b1 = new JButton("A");
		b1.setSize(100, 100);
		b1.setVisible(true);
		b1.setHorizontalAlignment(SwingConstants.CENTER);
		b1.setVerticalAlignment(SwingConstants.CENTER);
		b1.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent arg0) {
		}
		});
		panel.add(b1);
		
		JButton b2 = new JButton("B");
		b2.setSize(100, 100);
		b2.setHorizontalAlignment(SwingConstants.CENTER);
		b2.setVerticalAlignment(SwingConstants.BOTTOM);
		b2.setVisible(true);
		b2.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent arg0) {
		}
		});
		panel.add(b2);
		
		JButton b3 = new JButton("C");
		b3.setSize(100, 100);
		b3.setHorizontalAlignment(SwingConstants.CENTER);
		b3.setVerticalAlignment(SwingConstants.BOTTOM);
		b3.setVisible(true); }
	public void actionPerformed(ActionEvent e) {
		if(b1.isEnabled()) {
			label.setText("A is clicked");
	}
		if(b2.isEnabled()) {
			label.setText("B is clicked");
		}
		if(b3.isEnabled()) {
			label.setText("C is clicked");
		}
		}{;
		panel.add(b3); }}


